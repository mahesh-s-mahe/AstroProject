---
interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
---

<a href={href} class="nav-link">
  {text}
</a>

<style>
  .nav-link {
    color: #333;
    text-decoration: none;
    padding: 0.5rem 1rem;
    transition: color 0.2s ease-in-out;
  }

  .nav-link:hover {
    color: #007bff; /* Example hover color */
  }
</style>